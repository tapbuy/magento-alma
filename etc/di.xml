<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Alma\MonthlyPayments\Gateway\Request\PaymentDataBuilder">
        <plugin name="tapbuy_alma_payment_data_builder" 
                type="Tapbuy\Alma\Plugin\PaymentDataBuilderPlugin"
                sortOrder="10"/>
    </type>
    
    <!-- Inject centralized Tapbuy Logger via interface (resolved via preference in redirect-tracking) -->
    <type name="Tapbuy\Alma\Plugin\PaymentDataBuilderPlugin">
        <arguments>
            <argument name="logger" xsi:type="object">Tapbuy\RedirectTracking\Api\LoggerInterface</argument>
        </arguments>
    </type>
</config>